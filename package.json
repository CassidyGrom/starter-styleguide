{
  "name": "starter",
  "version": "2.0.0",
  "description": "Starter template for Polygraph stories",
  "browserslist": "last 3 versions",
  "scripts": {
    "build:assets": "rm -rf dev/assets && cp -r src/assets dev",
    "build:css": "stylus src/css/config.styl -u autoprefixer-stylus -o dev/bundle.css -w -m",
    "build:js": "node scripts.js --dev",
    "build:html": "node html.js --dev",
    "prebuild": "rm -rf dev && mkdir dev && npm run build:assets",
    "build": "npm-run-all --parallel build:*",
    "watch:assets": "onchange 'src/assets/**/*' -- npm run assets:dev && npm run html:dev",
    "watch:html": "onchange 'src/html/**/*' -- npm run html:dev",
    "serve": "light-server -q -p 4000 -s dev/. -w 'dev/bundle.css # # reloadcss' -w 'dev/bundle.js # #' -w 'dev/assets/**/* # #' -w 'dev/index.html # #'",
    "dev": "npm-run-all --parallel build serve watch:*",
    "dist:assets": "cp -r src/assets dist",
    "dist:css": "stylus src/css/config.styl -u autoprefixer-stylus -o dist/bundle.css -c",
    "dist:js": "node scripts.js --dist",
    "dist:html": "node html.js --dist",
    "predist": "rm -rf dist && mkdir dist",
    "dist": "npm-run-all --sequential dist:assets dist:js dist:css dist:html"
  },
  "author": "Russell Goldenberg",
  "license": "MIT",
  "dependencies": {
    "autoprefixer-stylus": "^0.13.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "d3": "^4.6.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "fontfaceobserver": "^2.0.9",
    "fuse-box": "^1.3.122",
    "handlebars": "^4.0.6",
    "inline-source": "^5.2.0",
    "light-server": "^1.1.10",
    "lodash.debounce": "^4.0.8",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "promis": "^1.1.4",
    "source-map": "^0.5.6",
    "stylus": "^0.54.5",
    "webpack": "^2.2.1"
  }
}
