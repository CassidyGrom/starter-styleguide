.intro
	margin 0 auto 5rem auto
	padding 6rem 1rem 3rem 1rem
	background-color $off-white

	&__hed
		max-width 60rem
		margin 4rem auto
		text-align center
		font-family $benton-bold
		set-type-size('xxxx-large', true)

	&__dek
		max-width $column-width
		margin 2rem auto 5rem auto
		text-align center
		set-type-size('root', true)

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
