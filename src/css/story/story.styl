fontify($canela, $canela-hash, $serif)
fontify($publico, $publico-hash, $serif)
fontify($atlas, $atlas-hash, $sans)

html, body
	background-color #fff
	color $off-black
	font-size 18px

p 
	line-height 1.8
	
a
	text-decoration none
	border-bottom 2px solid $primary
	color $off-black
	&:visited, &:hover
		color $off-black