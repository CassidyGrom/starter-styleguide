$benton = 'benton-sans-regular'
$benton-hash = 'benton'
$benton-bold = 'benton-sans-bold'
$benton-bold-hash = 'benton-bold'
$benton-medium = 'benton-sans-medium'
$benton-medium-hash = 'benton-medium'
// -------------------
// Typefaces
// -------------------
$sans-fb = Helvetica, Arial, sans-serif
$serif-fb = Georgia, Times, serif
$sans = $benton, $sans-fb
$sans-display = $benton-medium, $sans-fb
$serif = $serif-fb
$serif-display = $serif-fb
//$mono = Menlo, Consolas, Monaco, 'Courier New', monospace

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 1000
}

