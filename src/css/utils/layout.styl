// -------------------
// Layouts
// -------------------

// Setting root sizes and base styles.

body
	font-feature-settings 'kern' 1, 'onum' 1, 'liga' 0, 'tnum' 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	-webkit-tap-highlight-color rgba(0,0,0,0)
	background-color #fff
	color $off-black
	font-size $root-size

h1
	set-type-size(xxx-large, true)
	margin-bottom 1rem
h2
	set-type-size(xx-large, true)
	margin-bottom 1rem
h3
	set-type-size(x-large, true)
	margin-bottom 1rem
h4
	set-type-size(large, true)
	margin-bottom 1rem
h5
	set-type-size(large, true)
	margin-bottom 1rem
h6
	set-type-size(large, true)
	margin-bottom 1rem
	
p 
	margin-top 1.5rem
	margin-bottom 1.5rem
	set-type-size(medium, true)

a
	text-decoration none
	border-bottom 2px solid $primary
	color $off-black

	&:visited, &:hover
		color $off-black

strong, b
	font-weight bold

em, i
	font-style italic
	
ul
	list-style-type none

li
	set-type-size(medium, true)

img, video
	display block
	width 100%

button
	cursor pointer
	border none
	outline none
	margin 0
	padding 0
	font-size 1rem

h1
	set-type-size(xxx-large, true)

sub, sup
	font-size 0.75rem
	line-height 0
	position relative
	vertical-align baseline

sup
	top -0.5em

sub
	bottom -0.25em
